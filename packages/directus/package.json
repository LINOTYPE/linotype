{
  "name": "@linotype/directus-extension-linotype",
  "description": "Linotype website framework for Directus",
  "icon": "extension",
  "version": "1.2.1",
  "keywords": [
    "directus",
    "directus-extension",
    "directus-custom-bundle"
  ],
  "directus:extension": {
    "type": "bundle",
    "path": {
      "app": "dist/app.js",
      "api": "dist/api.js"
    },
    "entries": [
      {
        "type": "module",
        "name": "linotype",
        "source": "src/modules/index.ts"
      },
      {
        "type": "endpoint",
        "name": "linotype",
        "source": "src/endpoints/index.ts"
      },
      {
        "type": "endpoint",
        "name": "linotype",
        "source": "src/endpoints/blocks.ts"
      },
      {
        "type": "endpoint",
        "name": "linotype",
        "source": "src/endpoints/config.ts"
      },
      {
        "type": "endpoint",
        "name": "linotype",
        "source": "src/endpoints/page.ts"
      },
      {
        "type": "endpoint",
        "name": "linotype",
        "source": "src/endpoints/template.ts"
      },
      {
        "type": "endpoint",
        "name": "linotype",
        "source": "src/endpoints/menu.ts"
      },
      {
        "type": "endpoint",
        "name": "linotype",
        "source": "src/endpoints/sitemap.ts"
      },
      {
        "type": "endpoint",
        "name": "linotype",
        "source": "src/endpoints/search.ts"
      }
    ],
    "host": "^9.23.1",
    "hidden": false
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "update": "npx taze major",
    "test": "echo 'test'",
    "dev": "directus-extension build --watch --no-minify",
    "play": "npx chokidar \"./../../packages/directus/src/**/*\" --initial -c \"export NODE_TLS_REJECT_UNAUTHORIZED=0 && npx kill-port 3001 && npx nx run @linotype/directus-extension-linotype:build && npx nx run playground-directus:dev\"",
    "build": "directus-extension build",
    "release:current": "directus-extension build && npm publish --access public",
    "release:patch": "yarn version --patch && yarn release:current",
    "release:minor": "yarn version --minor && yarn release:current",
    "release:major": "yarn version --major && yarn release:current" 
  },
  "devDependencies": {
    "@directus/extensions-sdk": "9.23.1",
    "@linotype/core": "*",
    "@rollup/plugin-yaml": "^4.0.1",
    "@types/lodash-es": "^4.17.7",
    "@vueuse/core": "^10.0.2",
    "glob": "^10.2.1",
    "glob-promise": "^6.0.2",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "node-fetch": "^3.3.1",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-dir-import": "^0.0.3",
    "typescript": "^5.0.4",
    "v-code-diff": "^1.4.0",
    "vue": "^3.2.47",
    "yaml": "^2.2.1"
  }
}
