{
  "name": "@linotype/directus-extension-linotype",
  "description": "Linotype website framework for Directus",
  "private": false,
  "icon": "extension",
  "version": "1.2.6",
  "keywords": [
    "directus",
    "directus-extension",
    "directus-custom-bundle"
  ],
  "directus:extension": {
    "type": "bundle",
    "path": {
      "app": "dist/app.js",
      "api": "dist/api.js"
    },
    "entries": [
      {
        "type": "module",
        "name": "linotype-module",
        "source": "src/modules/index.ts"
      },
      {
        "type": "endpoint",
        "name": "linotype",
        "source": "src/endpoints/index.ts"
      }
    ],
    "host": "^10.8.0",
    "hidden": false
  },
  "files": [
    "dist"
  ],
  "exports": {
    "./package.json": "./package.json",
    "./dist/app.js": "./dist/app.js",
    "./dist/api.js": "./dist/api.js"
  },
  "scripts": {
    "update": "npx taze major",
    "test": "echo 'test'",
    "dev": "directus-extension build --watch --no-minify",
    "play": "npx chokidar \"./../../../packages/@linotype/directus/src/**/*\" --initial -c \"export NODE_TLS_REJECT_UNAUTHORIZED=0 && npx kill-port 3001 && npx nx build @linotype/directus-extension-linotype && npx nx dev playground-directus\"",
    "build": "directus-extension build",
    "release:current": "directus-extension build && npm publish --access public",
    "release:patch": "pnpm version patch && pnpm release:current",
    "release:minor": "pnpm version minor && pnpm release:current",
    "release:major": "pnpm version major && pnpm release:current"
  },
  "devDependencies": {
    "@directus/extensions-sdk": "^10.3.0",
    "@linotype/core": "workspace:*",
    "@rollup/plugin-yaml": "^4.1.2",
    "@types/lodash-es": "^4.17.12",
    "@vueuse/core": "^10.7.0",
    "glob": "^10.3.10",
    "glob-promise": "^6.0.5",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "node-fetch": "^3.3.2",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-dir-import": "^0.0.3",
    "typescript": "^5.3.3",
    "vue": "^3.3.13",
    "yaml": "^2.3.4"
  },
  "dependencies": {
    "directus": "^10.8.3",
    "nx": "15.9.7"
  }
}
